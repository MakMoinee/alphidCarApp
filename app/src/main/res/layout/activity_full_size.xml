<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="480dp"
            android:layout_height="250dp"
            android:layout_alignParentRight="true">

            <WebView
                android:id="@+id/web_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="40dp">

            <ImageButton
                android:id="@+id/btnUp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="60dp"
                android:background="@color/black"
                android:scaleType="centerInside"
                android:src="@drawable/ic_arrow_up" />

            <ImageButton
                android:id="@+id/btnLeft"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/btnUp"
                android:layout_marginTop="20dp"
                android:background="@color/black"
                android:scaleType="centerInside"
                android:src="@drawable/ic_arrow_left" />

            <ImageButton
                android:id="@+id/btnRight"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/btnUp"
                android:layout_alignStart="@id/btnUp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/btnLeft"
                android:background="@color/black"
                android:scaleType="centerInside"
                android:src="@drawable/ic_arrow_right" />

            <ImageButton
                android:id="@+id/btnDown"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/btnLeft"
                android:layout_alignStart="@id/btnUp"
                android:layout_marginTop="20dp"
                android:background="@color/black"
                android:scaleType="centerInside"
                android:src="@drawable/ic_arrow_down" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="40dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnConnect"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/sen_bold"
                    android:text="Connect Bluetooth"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btnActType"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/sen_bold"
                    android:text="Auto"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:theme="@style/CustomYellowStyle" />

                <Button
                    android:id="@+id/btnStartDetection"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/sen_bold"
                    android:text="Start Detection"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:theme="@style/CustomTealStyle" />

                <Button
                    android:id="@+id/btnPump"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/sen_bold"
                    android:text="Pump"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>