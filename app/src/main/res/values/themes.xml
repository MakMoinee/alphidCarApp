<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AlphidCar" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.AlphidCar" parent="Base.Theme.AlphidCar" />

    <style name="CustomBlackStyle" parent="Theme.Design.Light">
        <item name="colorPrimary">#000000</item>
        <item name="colorAccent">#FFEB3B</item>
    </style>

    <style name="CustomYellowStyle" parent="Theme.Design.Light">
        <item name="colorPrimary">#FFEB3B</item>
        <item name="colorAccent">#000000</item>
    </style>

    <style name="CustomTealStyle" parent="Theme.Design.Light">
        <item name="colorPrimary">#009688</item>
        <item name="colorAccent">#000000</item>
    </style>

    <style name="Theme.AlphidCar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#000000</item>
        <item name="colorAccent">#FFEB3B</item>

        <item name="colorSecondary">#FAE002</item>
        <item name="colorSecondaryVariant">#8F9600</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="Theme.AlphidCar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AlphidCar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
